
@model List<Contact>
@{
    ViewBag.Title = "Contact Manager";
}

<h2>Contact Manager</h2>

<a asp-controller="Contact" asp-action="Add">Add New Contact</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Category</th>
                <th>Organization</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
            <tr>
                <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">@contact.FirstName</a></td>
                <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">@contact.LastName</a></td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td>@contact.Category.Name</td>
                <td>@contact.Organization</td>
            </tr>
            }
        </tbody>
    </table>

